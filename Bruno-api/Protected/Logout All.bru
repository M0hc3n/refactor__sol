meta {
  name: Logout All
  type: http
  seq: 9
}

post {
  url: {{base_url}}/logout-all
  body: none
  auth: bearer
}

auth:bearer {
  token: {{token}}
}

script:post-response {
  if (res.getStatus() === 200) {
    bru.setEnvVar("token", "");
  }
}

tests {
  test("Status is 200", function() {
    expect(res.getStatus()).to.equal(200);
  });

  test("Logged out from all devices", function() {
    expect(res.body.message).to.equal("Logged out from all devices successfully");
  });
}